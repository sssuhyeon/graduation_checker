{
    "name": "졸업 사정 시뮬레이터",
    "version": "1.0",
    "description": "졸업 가능 여부를 판정합니다.",
    "manifest_version": 3,
    "permissions": [
        "sidePanel", 
        "storage", 
        "tabs",
        "scripting",
        "activeTab"
    ],
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "host_permissions": [
        "https://ndrims.dongguk.edu/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "action": {
        "default_title": "Click to open panel"
    },
    "content_scripts": [
        {
            "matches": ["https://ndrims.dongguk.edu/*"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["injected_script.js"],
            "matches": ["https://ndrims.dongguk.edu/*"]
        }
    ] 
    
}